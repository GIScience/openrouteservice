{
  "configuration": {
    "status": "error",
    "name": "ORSLogger",
    "packages": "org.apache.logging.log4j",
    "appenders": {
      "Console": {
        "name": "stdout",
        "PatternLayout": {
          "pattern": "%d{dd MMM HH:mm:ss} %highlight{%-7p} %style{%50t}{Cyan} %style{[ %-40.40c{1.} ]}{Bright Cyan}   %m%n"
        }
      },
      "RollingFile": {
        "name": "orslogfile",
        "fileName": "${sys:logPath}ors.log",
        "filePattern": "${sys:logPath}ors.%d{yyyy-MM-dd}.log.gz",
        "PatternLayout": {
          "pattern": "%d %p [%c{2}] - %m%n"
        },
        "TimeBasedTriggeringPolicy": { "interval": "1", "modulate": "true" }
      }
    },
    "loggers": {
      "logger": [
        {
          "name": "org.heigit.ors",
          "level": "info",
          "additivity": "false",
          "AppenderRef": [
            {
              "ref": "orslogfile"
            },
            {
              "ref": "stdout"
            }
          ]
        }
      ],
      "root": {
        "level": "warn",
        "AppenderRef": {
          "ref": "stdout"
        }
      }
    }
  }
}