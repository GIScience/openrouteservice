{
  "configuration": {
    "status": "error",
    "name": "ORSLogger",
    "packages": "org.apache.logging.log4j",
    "appenders": {
      "Console": {
        "name": "stdout",
        "PatternLayout": {
          "pattern": "%d{yyyy-MM-dd HH:mm:ss,SSS} %highlight{%-7p} %style{%50t}{Cyan} %style{[ %-40.40c{1.} ]}{Bright Cyan}   %m%n"
        }
      },
      "RollingFile": {
        "name": "orslogfile",
        "fileName": "${sys:logPath:-logs/}ors.log",
        "filePattern": "${sys:logPath:-logs/}ors.%d{yyyy-MM-dd-HH-mm-ss}.log",
        "PatternLayout": {
          "pattern": "%d %p [%c{2}] - %m%n"
        },
        "Policies": {
          "CronTriggeringPolicy": {
            "schedule": "${env:ORS_LOG_PATTERN:-0 0 0 * * ?}",
            "evaluateOnStartup": "true"
          }
        }
      }
    },
    "loggers": {
      "logger": [
        {
          "name": "org.heigit.ors",
          "level": "debug",
          "additivity": "false",
          "AppenderRef": [
            {
              "ref": "orslogfile"
            },
            {
              "ref": "stdout"
            }
          ]
        }
      ],
      "root": {
        "level": "error",
        "AppenderRef": {
          "ref": "stdout"
        }
      }
    }
  }
}