			<extension base="xls:AbstractDataType">
				<sequence>
					<element ref="xls:WayType" maxOccurs="unbounded"/>
				</sequence>
			</extension>
		</complexContent>
	</complexType>
       <element name="WayTypeList" type="xls:WayTypeListType">
		<annotation>
			<documentation>List of way types.</documentation>
		</annotation>
	</element>
       <complexType name="WayTypeType">
		<annotation>
			<documentation>Defines a type of the way.</documentation>
		</annotation>
		<sequence>
                     <element name="From" type="integer" minOccurs="0"/>
                     <element name="To" type="integer" minOccurs="0"/>
